{
  "editor.tabSize": 2,
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
  },
  "eslint.validate": ["javascript"],
  "search.exclude": {
    "android/**": true,
    "**/pnpm-lock.yaml": true
  },
  "editor.quickSuggestions": {
		"strings": true
	},
  "editor.formatOnPaste": false,
  "tailwindCSS.includeLanguages": {
    "vue": "html",
    "vue-html": "html",
  },
  "i18n-ally.localesPaths": [
    "src/locales"
  ],
  "i18n-ally.keystyle": "nested",
  "cSpell.words": [
    "composables",
    "dexie",
    "dompurify",
    "execpath",
    "intlify",
    "ionicons",
    "middlewares",
    "pinia",
    "precache",
    "precaching",
    "referrerpolicy",
    "scroller",
    "sortablejs",
    "swiper",
    "tailwindcss",
    "unplugin",
    "vite",
    "vitejs",
    "vueuse"
  ]
}